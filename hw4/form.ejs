<body>
    <header class="menu">
        <nav>
            <h1>Обратная связь</h1>
            <ol class="list">
                <li><a href="index.html">Обо мне</a></li>
                <li><a href="form.html">Обратная связь</a></li>
            </ol>
        </nav>
    </header>
    <hr class="hr-sloping-lines">
    <main>
        <section>
            <h2>Интерактивная карта</h2>
            <div id="map"></div>
        </section>
        <section>
            <h2>Чат</h2>
            <div id="chat">
                <div id="chat-box"></div>
                <input type="text" id="chat-input" class="chat-input" placeholder="Ваш вопрос...">
                <button id="send-message">Отправить</button>
                <button id="record-audio"><i class="fas fa-microphone"></i></button>
                <!-- <button id="send-message" class="send-message">Отправить</button> -->
            </div>
            <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
            <script src="resources/js/chat_map.js"></script>
        </section>
        <section>
            <h2>Оставьте отзыв</h2>
            <form action="/send" method="post" id="feedback-form">
                <div class="form-group">
                    <label for="name">Ваше имя:</label>
                    <input type="text" id="name" name="name" placeholder="Имя" required>
                </div>
                
                <div class="form-group">
                    <label for="email">Электронная почта:</label>
                    <input type="email" id="email" name="email" placeholder="Почта" required>
                </div>
                
                <div class="form-group">
                    <label for="message">Отзыв:</label>
                    <textarea id="message" name="message" rows="4" placeholder="Задайте свой вопрос" required></textarea>
                </div>
                
                <input type="submit" value="Отправить">
            </form>            
        </section>
        <section>
            <article>
                <h2>Мои контакты</h2>
                <div class="contacts">
                    <span>Телефон: +7 (918) 141-17-77</span>
                    <span>Почта: <a href="mailto:ebboldova@edu.hse.ru">ebboldova@edu.hse.ru</a></span>
                    <span>Телеграм: <a href="https://t.me/linastewart">@linastewart</a></span>
                </div>
            </article>
        </section>
    </main>
    
